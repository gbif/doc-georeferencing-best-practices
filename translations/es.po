#: 0300-the-georeferencing-process.en.adoc:404
msgid "Uncertainty related to <<coordinate precision>>."
msgstr ""

#. type: Plain text
#: 0300-the-georeferencing-process.en.adoc:405
msgid "Uncertainty from unknown <<coordinate reference system>> or <<datum>>."
msgstr ""

#. type: Plain text
#: 0300-the-georeferencing-process.en.adoc:406
msgid "Uncertainty related to <<heading>>."
msgstr ""

